- @resources.each do |resource|
  .content-listing.grid_12
    .listing-icon
      = image_tag resource.image(:thumb)
    %h1
      = link_to resource.name, "/news/#{resource.id}"
    %p.posting-details
      %span.posting-category
        = resource.news_categories.first.try(:name)
      %span.middle-dot
        &bull;
      %span.posting-id
        = resource.catalog_id
      %span.middle-dot
        &bull;
      %span.posting-date
        = resource.release_date.strftime("%A, %B #{resource.release_date.day.ordinalize}, %Y")
    %p
      = resource.abstract
    .clear
= render :partial => "layouts/paginate" 