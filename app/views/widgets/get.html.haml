.grid_16.ui-accordion-header.ui-state-default
  %h3.ui-helper-reset
    Widget:
    = @resource.name
.clear
- unless @resource.new_record?
  .grid_16.ui-widget-header.ui-border-sides.ui-button-bar
    .float-left
      = link_to 'Delete...', singular_path(@resource), :confirm => "Are you sure you want to delete #{@resource.name}?", :method => :delete, :class => 'ui-button icon-destroy'
  .clear
.grid_16.ui-widget-content.ui-corner-bottom
  = form_for(@resource, :url => singular_path(@resource)) do |f|
    .field
      %label Name:
      = f.text_field :name, :class => 'string'
    .field
      .wymeditor
        = f.text_area :description
    = render 'extish_rickets/footer', :resource => @resource
